<div class="row">
  <div class="col-md-12 text-center">
    <div><a class="btn btn-warning" data-toggle="collapse" aria-expanded="true" aria-controls="collapse-1" role="button" href="#collapse-1">Not in Quickbooks<span class="caret"> </span></a>
      <div class="collapse in" id="collapse-1">
        <% if @timecards.count == 0 %>
          <p class='text-center'>No Pending Timecard Transactions for this date range.</p>
        <% else %>
        <h3><%=@timecards.size %> pending </h3>
        <table class="table table-striped table-bordered table-condensed">
          <thead>
          <tr class="center">
            <th>Employee Name</th>
            <th>Customer/Job</th>
            <th>Notes</th>
            <th>Duration</th>
            <th>Date</th>
            <th>Status</th>
            <th>Error</th>
          </tr>
          </thead>
          <tbody>
          <% @timecards.each do |t| %>
              <tr>
                <td> <%= t.employee&.first_name %> <% t.employee&.last_name %></td>
                <td> <%= t.customer_full_name %></td>
                <td> <%= t.qb_notes %></td>
                <td> <%= t.duration %></td>
                <td> <%= t.tc_date.to_formatted_s(:db) %></td>
                <td> <%= t.tc_status %></td>

                <% if t.valid_customer? %>
                    <td class="bg-success"><i class="glyphicon glyphicon-ok"></i></td>
                    <% else %>
                    <td class="bg-danger"><i class="glyphicon glyphicon-exclamation-sign"></i></td>
                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>
          <div class="col-md-12 text-center">
            <button id="exportToQb" class="btn btn-primary" type="submit">Send To Quickbooks</button>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

