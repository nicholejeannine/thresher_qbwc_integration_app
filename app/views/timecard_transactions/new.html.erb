<% if @timecards.count == 0 %>
  <p class='text-center'>No Pending Timecard Transactions for this date range.</p>
<% else %>
  <h4 class="text-center"><%= @timecards.size %> pending </h4>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
    <tr class="center">
      <th>Employee Name</th>
      <th>Customer/Job</th>
      <th>Notes</th>
      <th>Duration</th>
      <th>Date</th>
      <th>Status</th>
      <th>Error</th>
    </tr>
    </thead>
    <tbody>
    <% @timecards.each do |t| %>
      <tr>
        <td> <%= t.employee_name %></td>
        <td> <%= t.customer_full_name %></td>
        <td> <%= t.qb_notes %></td>
        <td> <%= t.duration %></td>
        <td> <%= t.tc_date.to_formatted_s(:db) %></td>
        <td> <%= t.tc_status %></td>

        <% if t.valid_customer? %>
          <td class="bg-success"><i class="glyphicon glyphicon-ok"></i></td>
        <% else %>
          <td class="bg-danger">No QB Customer found</td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="col-md-12 text-center">
    <button id="exportToQb" class="btn btn-primary" type="submit">Send To Quickbooks</button>
  </div>
<% end %>

